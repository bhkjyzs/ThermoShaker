<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <LinearLayout
        android:id="@+id/mll_top"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dip_30"

        android:layout_marginLeft="@dimen/dip_70"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <CheckBox
            android:id="@+id/cb_top"
            android:button="@null"
            android:enabled="false"
            android:background="@drawable/check_select"
            android:layout_width="@dimen/dip_35"
            android:layout_height="@dimen/dip_35"
            android:layout_marginLeft="@dimen/dip_20"
            tools:ignore="MissingConstraints">

        </CheckBox>

        <TextView
            android:textSize="@dimen/sp_35"
            android:textColor="@color/gray"
            android:text="@string/Thecorrespondingheatingchannelisclosed"
            android:layout_marginRight="@dimen/dip_20"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/mll_center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mll_top"
        android:layout_marginTop="@dimen/dip_30"

        android:layout_marginLeft="@dimen/dip_70"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <CheckBox
            android:id="@+id/cb_center"
            android:button="@null"
            android:enabled="false"
            android:background="@drawable/check_select"
            android:layout_width="@dimen/dip_35"
            android:layout_height="@dimen/dip_35"
            android:layout_marginLeft="@dimen/dip_20"
            tools:ignore="MissingConstraints">

        </CheckBox>

        <TextView
            android:textSize="@dimen/sp_35"
            android:textColor="@color/gray"
            android:text="@string/Thecorrespondingheatingchannelisopen"
            android:layout_marginRight="@dimen/dip_20"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>