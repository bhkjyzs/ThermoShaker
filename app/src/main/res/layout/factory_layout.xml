<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dip_400"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/setting_dialog_bg"
    android:layout_height="@dimen/dip_500"
    android:orientation="vertical">



    <TextView
        android:background="@drawable/setting_dialog_title_bg"
        android:text="@string/setting_factory"
        android:gravity="center"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_55">

    </TextView>

    <LinearLayout
        android:layout_width="@dimen/dip_400"
        android:layout_height="445dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dialog_keyboard_textview"
            android:layout_width="@dimen/dip_150"
            android:layout_height="@dimen/dip_50"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:inputType="number"
            android:textSize="28sp" />

        <com.example.thermoshaker.util.key.SystemKeyboard
            android:id="@+id/customNumKeyView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            keyboard:keyDrawable="@drawable/btn_keyboard_key"
            keyboard:xmlLayoutResId="@xml/keyboard_numbers_factory"
            android:layout_height="370dp"
            tools:ignore="MissingConstraints">

        </com.example.thermoshaker.util.key.SystemKeyboard>

    </LinearLayout>

</LinearLayout>