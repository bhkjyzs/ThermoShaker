<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_80"
    android:background="@drawable/bg_transparent_yellow"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_wifi_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_wifi_name"
        android:text=""
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/img_wifi_level_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wifi01"
        tools:ignore="ContentDescription" />
</RelativeLayout>