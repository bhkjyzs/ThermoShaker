<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".MainActivity">



    <View
        android:id="@+id/mViewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_55"
        tools:ignore="MissingConstraints">

    </View>
    <TextView
        android:text=""
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/mViewTop"
        app:layout_constraintTop_toTopOf="@+id/mViewTop"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dip_12"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>
    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/mViewTop"
        app:layout_constraintTop_toTopOf="@+id/mViewTop"
        android:src="@drawable/logo_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>




    <View
        android:id="@+id/mViewBtm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mViewTop"
        android:layout_width="match_parent"
        android:background="@drawable/main_btm_bg_shape"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

    </View>

    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/app_bg"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mViewBtm"
        android:layout_marginTop="@dimen/dip_40"
        android:textSize="@dimen/sp_105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/tv_date"
        android:textColor="@color/app_bg"
        android:text=""
        android:textSize="@dimen/sp_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>
    <LinearLayout
        android:id="@+id/mll_haveMsg"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dip_12"
        android:layout_height="@dimen/dip_227"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/ll_file"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/main_btn_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file"
                android:layout_marginTop="@dimen/dip_4"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_36"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/btn_selector_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/main_btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:layout_marginTop="@dimen/dip_4"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_36"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_run"

            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dip_10"

            android:background="@drawable/btn_selector_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/main_btn_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_running"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run"
                android:layout_marginTop="@dimen/dip_4"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_36"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fast"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:background="@drawable/btn_selector_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/fast_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_inching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Fast"
                android:layout_marginTop="@dimen/dip_4"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_36"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_con_msg"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dip_50"
        android:text="正在尝试通讯……"
        android:textSize="45sp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/dialog_factory_no_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>
    <Button
        android:id="@+id/dialog_factory_no_msg"
        android:layout_width="@dimen/dip_250"
        android:visibility="gone"
        android:layout_height="@dimen/dip_100"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dip_50"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_selector_bg"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>